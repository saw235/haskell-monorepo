{
  "name": "electron-sprite-animation",
  "version": "1.0.0",
  "description": "A 2D sprite animation demo using Babylon.js + Electron, demonstrating programmatic sprite generation and animation systems.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build",
    "build:renderer": "esbuild renderer.ts --bundle --outfile=renderer.bundle.js --platform=browser --format=iife --sourcemap",
    "watch:renderer": "esbuild renderer.ts --bundle --outfile=renderer.bundle.js --platform=browser --format=iife --sourcemap --watch"
  },
  "keywords": [
    "electron",
    "babylonjs",
    "2d-sprites",
    "animation",
    "bazel",
    "demo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@babylonjs/core": "^6.0.0",
    "@babylonjs/gui": "^6.0.0",
    "@babylonjs/loaders": "^6.0.0",
    "@babylonjs/materials": "^6.0.0",
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron-builder": "^24.0.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.example.electron-sprite-animation",
    "productName": "Electron Sprite Animation Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

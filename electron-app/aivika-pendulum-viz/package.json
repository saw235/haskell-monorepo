{
  "name": "aivika-pendulum-viz",
  "version": "1.0.0",
  "description": "Electron app for visualizing Aivika pendulum simulation with real-time animation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "keywords": [
    "electron",
    "aivika",
    "simulation",
    "visualization",
    "pendulum",
    "physics",
    "haskell",
    "bazel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "ws": "^8.14.0"
  },
  "build": {
    "appId": "com.example.aivika-pendulum-viz",
    "productName": "Aivika Pendulum Visualization",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
